{
  "name": "api",
  "private": true,
  "prettier": "@repo/next-config/prettier",
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./index.ts"
    }
  },
  "scripts": {
    "dev": "concurrently \"npm:next\" \"npm:stripe\"",
    "next": "next dev -p 3002 --turbopack",
    "build": "next build",
    "start": "next start",
    "analyze": "cross-env ANALYZE=true npm run build",
    "test": "cross-env NODE_ENV=test vitest run",
    "stripe": "stripe listen --forward-to localhost:3002/webhooks/payments",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "@repo/analytics": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/notifications": "workspace:*",
    "@repo/feature-flags": "workspace:*",
    "@repo/observability": "workspace:*",
    "@repo/payments": "workspace:*",
    "@repo/real-time": "workspace:*",
    "@repo/security": "workspace:*",
    "@repo/utils": "workspace:*",
    "@repo/webhooks": "workspace:*",
    "@sentry/nextjs": "^9.36.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "svix": "^1.69.0",
    "vitest": "^3.2.4",
    "zod": "^4.0.2",
    "@repo/config": "workspace:*"
  },
  "devDependencies": {
    "@repo/next-config/eslint": "workspace:*",
    "@repo/next-config/prettier": "workspace:*",
    "@repo/config": "workspace:*",
    "@types/node": "24.0.12",
    "@types/react": "19.1.8",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "typescript": "^5.8.3"
  }
}

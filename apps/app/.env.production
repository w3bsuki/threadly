# Production Environment Variables for Vercel Build
# These are safe default values for the build process

# Clerk URLs (build-time validation)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# Application URLs (these will be overridden by Vercel env vars)
NEXT_PUBLIC_APP_URL="https://threadly-app.vercel.app"
NEXT_PUBLIC_WEB_URL="https://threadly-web.vercel.app"
NEXT_PUBLIC_API_URL="https://threadly-api.vercel.app"
NEXT_PUBLIC_DOCS_URL="https://threadly-docs.vercel.app"

# Database (will be overridden by Vercel env vars)
DATABASE_URL="postgresql://placeholder"

# Development environment
NODE_ENV="production"

# Pusher (placeholder values for build)
NEXT_PUBLIC_PUSHER_KEY="pk_placeholder"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="placeholder"
PUSHER_SECRET="sk_placeholder"
{
  "extends": "../../packages/api/next-config/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/ui": [
        "../../packages/design-system"
      ],
      "@repo/ui/*": [
        "../../packages/design-system/*"
      ],
      "@repo/api/utils": [
        "../../packages/api/utils/src"
      ],
      "@repo/api/utils/*": [
        "../../packages/api/utils/src/*"
      ],
      "@repo/*": [
        "../../packages/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/src/**/*.tsx",
    "../../packages/*/*.ts",
    "../../packages/*/*.tsx",
    "../../packages/content/**/*.ts",
    "../../packages/content/**/*.tsx",
    "../../packages/design-system/components/**/*.ts",
    "../../packages/design-system/components/**/*.tsx",
    "../../packages/api/**/*.ts",
    "../../packages/api/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
